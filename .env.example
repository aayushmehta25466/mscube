# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True

# Database (PostgreSQL - Production)
USE_POSTGRES=False
DB_NAME=mscube_db
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# Email Settings (Production)
USE_SMTP_EMAIL=False
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@mscubefitness.com

# eSewa Payment Gateway
ESEWA_MERCHANT_ID=your-merchant-id
ESEWA_SUCCESS_URL=http://localhost:8000/management/payment/success/
ESEWA_FAILURE_URL=http://localhost:8000/management/payment/failure/

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-secret

# Facebook OAuth (Optional)
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-secret
